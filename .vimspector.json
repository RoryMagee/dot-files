{
    "configurations": {
        "node": {
            "adapter": "vscode-node",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "Y"
                }
            },
            "configuration": {
                "request": "launch",
                "protocol": "auto",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "skipFiles": [
                    "<node_internals>/**/*.js",
                    "${PWD}/node_modules/**/*.js"
                ],
                "program": "${PWD}/${filename}"
            }
        },
        "express": {
            "adapter": "vscode-node",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "Y"
                }
            },
            "configuration": {
                "name": "Attach to express application",
                "type": "node",
                "request": "attach",
                "skipFiles": ["<node_internals>/**/*.js"],
                "processId": "${processId}"
            }
        },
        "ts": {
            "adapter": "vscode-node",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "N"
                }
            },
            "configuration": {
                "request": "launch",
                "protocol": "auto",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "program": "${PWD}/out/${filename}",
                "cwd": "${PWD}"
            }
        },
        "ts-express": {
            "adapter": "vscode-node",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "Y"
                }
            },
            "configuration": {
                "request": "attach",
                "console": "integratedTerminal",
                "skipFiles": ["<node_internals>/**/*.js"],
                "processId": "${processId}"
            }
        },
        "c#": {
            "adapter": "netcoredbg",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "Y"
                }
            },
            "configuration": {
                "request": "launch",
                "program": "${PWD}/bin/Debug/net5.0/${dll_location}",
                "args": [],
                "stopAtEntry": true,
                "cwd": "${PWD}"
            }
        }
    }
}
