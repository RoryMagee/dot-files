{
    "configurations": {
        "basic-node": {
            "adapter": "vscode-node",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "Y"
                }
            },
            "configuration": {
                "request": "launch",
                "protocol": "auto",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "program": "${PWD}/${filename}"
            }
        },
        "chrome": {
            "adapter": "chrome",
            "configuration": {
                "request": "launch",
                "url": "http://localhost:4200/",
                "webRoot": "${PWD}/dist/index.html"
      }
        },
        "express": {

        },
        "ts": {
            "adapter": "vscode-node",
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "Y"
                }
            },
            "configuration": {
                "request": "launch",
                "protocol": "auto",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "program": "${PWD}/out/${filename}",
                "cwd": "${PWD}"
            }
        }
    }
}
